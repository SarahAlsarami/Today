      <div class="Create-form">
        <header>
            <button class="close">
               <i class="gg-close"></i>
                </button>
          <h1>Create Challenge</h1>
          <p>Fill in all information</p>
          <ul class="task-list">
            <!-- List items representing tasks will be dynamically added here -->
          </ul>
        </header>
        <form action="send-task" method="post">
          <div class="input-section challenge-name-section">
            <input class="challenge-name" type="text" placeholder="ENTER CHALLENGE NAME" autocomplete="off" name ="name"/>
            <div class="animated-button">
              <span class="icon-paper-plane">
                <i class="gg-pen"></i>
              </span>
              <span class="next-button challenge-name">
                <i class="fa fa-arrow-up"></i>
              </span>
            </div>
          </div>
          <div class="input-section end-date-section folded">
            <input class="end-date" type="date" name = "date"/>
            <div class="animated-button">
              <span class="icon-lock">
                <i class="gg-calendar-dates"></i>
              </span>
              <span class="next-button end-date">
                <i class="fa fa-arrow-up"></i>
              </span>
            </div>
          </div>
          <div class="input-section tasks-section folded">
            <button class="add-task-button"><i class="gg-add"></i></button>
            <input class="task-input" type="text" placeholder="ENTER A TASK" autocomplete="off" name = "task"/>
           
          
            <div class="animated-button">
              <span class="icon-repeat-lock">
                <i class="gg-play-list-check"></i>
              </span>
              <span class="next-button tasks">
                <i class="fa fa-paper-plane"></i>
              </span>
            </div>
          </div>
          <div class="success">
            <p>CHALLENGE CREATED</p>
          </div>
        </form>
      </div>

      <div class="Join-form">
        <header>
          <button class="closeJoin">
            <i class="gg-close"></i>
          </button>
          <h1>Join Challenge</h1>
          <p>Enter the challenge code to join:</p>
        </header>
        <form id = "joinForm">
          <div class="input-section challenge-code-section">
            <input required class="join-code" type="text" placeholder="ENTER CHALLENGE CODE" autocomplete="off" />
            <div class="submitBtn">
                <button class="submit-button" type="submit" value="submit">Join</button>
            </div>
          </div>
          <div class="success">
            <p>SUCCESS: Joined the challenge!</p>
          </div>
        </form>
